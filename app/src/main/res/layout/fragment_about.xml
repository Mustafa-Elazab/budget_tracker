<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.fragment.about.AboutFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/back_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_marginHorizontal="@dimen/_8sdp">


        <TextView
            android:id="@+id/tv_app_name"
            style="@style/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_above="@id/view_line"
            />

        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/Transportation"
            android:layout_above="@id/tv_app_verison"
            />

        <TextView

            android:id="@+id/tv_app_verison"
            style="@style/contentText"
            android:textSize="@dimen/_12ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_app_context"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="@string/version" />


        <com.nitish.typewriterview.TypeWriterView
            android:layout_centerVertical="true"
            android:id="@+id/tv_app_context"
            style="@style/contentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />

    </RelativeLayout>

</RelativeLayout>